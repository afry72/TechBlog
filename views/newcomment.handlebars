<div class="row d-flex justify-content-center mt-5">
    <div class="col-lg-6 col-mb-12">
        <div class="card m-3 border-dark">

            <div class="card-header bg-black">
                <h5 class="text-center text-light">{{post.post_title}}</h5>
            </div>

            <div class="card-body m-2">
                <div class="card-text text-center">{{post.content}}</div>
            </div>

            <div class="card-footer d-flex justify-content-end">
                author: {{post.user.username}}
            </div>

        </div>
    </div>
</div>
<div class="row d-flex justify-content-center mt-5"> 
     <div class="col-lg-6 col-mb-12">
        <div class="card bg-black">
            <div class="card-body">
                <h5 class="card-title text-center mb-3 text-white">New Comment</h5>
                <form class="form new-comment"  id="new-comment">
                    <div class="form-group mt-2 text-white">
                        <label for="new-comment-content">Comment Content</label>
                        <textarea class="form-control" id="new-comment-content" rows="3"></textarea>
                    </div>
                    <hr>
                    <a href="posts/{{post.id}}"><button type="submit" class="btn btn-primary text-light">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="./js/newComment.js"></script>