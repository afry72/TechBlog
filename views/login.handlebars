        <div class="card bg-black">
            <div class="card-body d-flex justify-content-center">
                <a href="/signup"><button type="button" class="btn bg-primary btn-light text-light" id="add-comment">Create Your New Account</button></a>
            </div>
        </div>
    </div>
    
</div>

